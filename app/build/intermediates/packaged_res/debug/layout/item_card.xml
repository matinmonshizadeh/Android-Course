<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        >

            <ImageView
                android:id="@+id/item_card_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house1"
                />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/heart"
                android:background="@drawable/icon_card_shape"
                android:layout_gravity="end" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="220dp"
        android:text="$200.000"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/item_card_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="224dp"
        android:text="Shiraz"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/item_card_bedrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:text="2"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bedrooms /"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/item_card_bathrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:text="4"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bathrooms /"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/item_card_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:text="1.416"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ft^2"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

</FrameLayout>
